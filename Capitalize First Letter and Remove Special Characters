function DifferentCases(str) {
var strArrayToBeSanitized = str.split('')
var splitWordSanitized = []

for (var k = 0; k < strArrayToBeSanitized.length; k++){
    if (/([a-z] | [A-Z] | \).test(strArrayToBeSanitized[k])) {
      split.WordSanitized.push(strArrayToBeSanitized[k])  
  } else {
    splitWordSanitized.push(' ')
  }
} 

var sanitized = splitWordSanitized.join("")
console.log(sanitized)
